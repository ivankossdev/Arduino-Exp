void drawFullPixel(unsigned char pix){
  for (int i = 0; i < 84; i++) {
    ex[i + NEXT * 0] = pix;
    ex[i + NEXT * 1] = pix;
    ex[i + NEXT * 2] = pix;
    ex[i + NEXT * 3] = pix;
    ex[i + NEXT * 4] = pix;
    ex[i + NEXT * 5] = pix;
    mylcd.LCDCustomChar(ex, sizeof(ex) / sizeof(unsigned char), LCDPadding_None, true);
    delay(50);
  }
}

void loop() {
  mylcd.LCDgotoXY(0, 0);
  drawFullPixel(0xff);
  drawFullPixel(0x00);
}
